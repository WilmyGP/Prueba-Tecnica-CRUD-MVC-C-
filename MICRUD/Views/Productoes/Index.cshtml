@model IEnumerable<MICRUD.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabla Producto</h1>

<hr />
<p>
    <a asp-action="Create" class="btn btn-success">Crear Producto</a>
</p>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaExpiracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaExpiracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                    <a asp-action="edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="details" class="btn btn-warning" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a> |
                    <a asp-action="sales" class="btn btn-success" asp-route-id="@item.Id">Vender</a>
            </td>
        </tr>
}
    </tbody>
</table>
